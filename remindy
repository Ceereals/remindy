#!/bin/bash
source "$(dirname "${BASH_SOURCE[0]}")/remindy-common"

while true; do
  choice=$(gum choose \
    "󰀠 Add reminder" \
    " List reminders" \
    " Remove reminder" \
    "Quit")

  case "$choice" in
    "󰀠 Add reminder")     remindy-add ;;
    " List reminders")   remindy-list ;;
    " Remove reminder")  remindy-remove ;;
    "Quit"|"")          break ;;
  esac
done
