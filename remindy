#!/bin/bash
source "$(dirname "${BASH_SOURCE[0]}")/remindy-common"

trap 'exit 0' INT

while true; do
  clear
  show_banner
  echo ""
  choice=$(gum choose \
    "󰀠 Add reminder" \
    " List reminders" \
    " Remove reminder" \
    " Quit")

  case "$choice" in
    "󰀠 Add reminder")     remindy-add || true ;;
    " List reminders")
      remindy-list || true
      echo ""
      read -n 1 -s -r -p "Press any key to continue..."
      ;;
    " Remove reminder")  remindy-remove || true ;;
    *)  break ;;
  esac
done
